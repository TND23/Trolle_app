<section id="joinUs">
    <h4 style="font-size: -webkit-xxx-large;">Sign in</h4>
    <div class="column-group half-gutters">
      <form id="signInDiv" class="ink-form large-50 medium-50 small-50" action="<%= session_url %>" method="post">
        <input
           name="authenticity_token"
           type="hidden"
           value="<%= form_authenticity_token %>">

        <label for="user_username">Username</label>
        <input
           id="user_username"
           name="user[username]"
           type="text">
        <br>

        <label for="user_password">Password</label>
        <input
           id="user_password"
           name="user[password]"
           type="password">
        <br>

        <input type="submit" value="Log in" id="logInButton"         class="ink-button blue large-25 push-center">
      </form>
    </div>
</section>

<section id="createAccountSection">


  <div class="column-group half-gutters">
    <div>
     <h4 style="font-size: -webkit-xxx-large;">New User? Create an Account     here:</h4></div>
    <form
    id="createAccountDiv"
    class="ink-form large-50 medium-50 small-50"
    action="<%= users_url %>"
    method="post">
      <input
         name="authenticity_token"
         type="hidden"
         value="<%= form_authenticity_token %>">

      <label for="user_username">Username</label>
      <input
         id="user_username"
         name="user[username]"
         placeholder="JohnDoe123"
         type="text">
      <br>

      <label for="user_password">Password</label>
      <input
         id="user_password"
         name="user[password]"
         placeholder="aTerriblePassword"
         type="password">
      <br>

      <input type="submit"
        value="Create account"
        id="signUpButton"
        class="ink-button blue large-25 push-center">
    </form>
  </div>
</section>

