  <header>
    <h1>Hello Guest
      <div id="imageLogo">
      </div>
      <div id="welcomeLogo">
        Welcome To Trolle
      </div>
    </h1>
    <nav class="ink-navigation vspace">
      <ul class="menu horizontal flat rounded shadowed grey" id="home_menu">
        <div class="large-5" ></div>
        <li id="tour" class="large-20"><a href="#tour">Website Tour</a></li>
        <li id="about" class="large-20"><a href="#about">About the Author</a>  
